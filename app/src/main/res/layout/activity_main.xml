<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/editNumber"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Set Number"
        android:id="@+id/setNumber"
        android:onClick="setNumber"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Show Number"
        android:id="@+id/showNumber"
        android:onClick="showNumber"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Start Binding"
        android:id="@+id/startBinding"
        android:onClick="startBinding"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Stop Binding"
        android:id="@+id/stopBinding"
        android:onClick="stopBinding"/>
</LinearLayout>